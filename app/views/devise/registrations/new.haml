%h2 Sign up
= form_for(resource.with_empty_player, as: resource_name, url: registration_path(resource_name), html: {class: "ui form"}) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    = f.email_field :email, autofocus: true
  = f.fields_for(:player) do |p|
    .field
      = p.label :name
      = p.text_field :name
    .field
      = p.label :country
      = p.country_select :country, {include_blank: 'Select a country'}, {class: "ui fluid dropdown"}
  .two.fields
    .field
      = f.label :password
      = f.password_field :password, autocomplete: "off"
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit "Sign up", :class => "ui blue submit button"
= render "devise/shared/links"
