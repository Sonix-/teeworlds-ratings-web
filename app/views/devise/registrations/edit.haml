%h2
  Edit #{resource_name.to_s.humanize} information
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "ui form" }) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    = f.email_field :email, autofocus: true
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  .two.fields
    .field
      = f.label :password
      = f.password_field :password, autocomplete: "off"
      %i (leave blank if you don't want to change it)
      - if @minimum_password_length
        %em
          = @minimum_password_length
          characters minimum
    .field
      = f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    = f.password_field :current_password, autocomplete: "off"
  .actions
    = f.submit "Update", class: "ui blue submit button"
%h3 Unhappy?
%p= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "ui red submit button"

%p= link_to "Back", :back
