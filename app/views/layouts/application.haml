!!!5
%html
  %head
    %title rTeeworlds Ladder
    = csrf_meta_tags
    %meta{:charset => "utf-8"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    %script{:type => "text/javascript", :src  => "http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"}
    %script{:type => "text/javascript", :src  => "http://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.14/semantic.min.js"}
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .tablet-hide.small-hide.large-hide.narrow.row
      .ui.inverted.navbar.menu
        %a.brand.item{:href => "#"}
          Project Name
        .right.menu.open
          %a.menu.item{:href => ""}
            %i.content.icon
      .ui.vertical.navbar.menu#mobilemenu
        - link_to_active_page 'Index', '/'
        - link_to_active_page 'Games', '/games'
        - link_to_active_page 'CTF Ranking', '/ctf/players'
        - link_to_active_page 'DM Ranking', '/dm/players'
        - link_to_active_page 'How to', '/howto'
        - link_to_active_page 'About', '/about'
    #menu.ui.grid.container
      %div.left.floated.eight.wide.column#logo
        = link_to (image_tag 'logo_test.png'), '/'
      %ul.right.floated.eight.wide.column.mobile-hide
        %li
          - link_to_active_page 'Index', '/'
        %li
          - link_to_active_page 'Games', '/games'
        %li
          - link_to_active_page 'CTF Ranking', '/ctf/players'
        %li
          - link_to_active_page 'DM Ranking', '/dm/players'
        %li
          - link_to_active_page 'How to', '/howto'
        %li
          - link_to_active_page 'About', '/about'
    #page.ui.container
      - if notice
        .ui.success.message
          %i.close.icon
          = notice
      - if alert
        .ui.warning.message
          %i.close.icon
          = alert
      - if user_signed_in?
        .ui.secondary.menu
          .item
            .ui.basic.buttons
              = link_to current_user.player.name, player_path(current_user.player.name)
              .ui.icon.top.left.pointing.dropdown.button
                %i.dropdown.icon
                .menu
                  .item
                    = link_to 'Account Settings', edit_user_registration_path
                  .item
                    Edit player profile
                  .item
                    = link_to('Sign out', destroy_user_session_path, :method => :delete, :class => "red text")
      =yield
    %footer
      .ui.container#foot
        .center.aligned.column
          %a.ui.inverted.icon.basic.button{"data-position" => "bottom center", "data-tooltip" => "Back to Top", :href => "#"}
            %i.arrow.up.icon
          %p#copy Â© 2018 site.com
    :javascript
      $(".close.icon").click(function(){
        $(this).parent().hide();
      });
