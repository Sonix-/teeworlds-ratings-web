%h3= @player.name
%h4= @player.clan
%h5= @player.rating

%h4 Latest games

%table.ui.basic.table.games
  %thead
    %tr
      %th Gametype
      %th Map
      %th Length
      %th Result
      %th Date
      %th Rating Change
  - @player.games.each do |game|
    %tr
      %th= game.gametype
      %th= game.map
      %th= game.time
      %th= game.result
      %th= game.date
      %th= if game.rating_change > 0 then "+" + game.rating_change.to_s else game.rating_change end
